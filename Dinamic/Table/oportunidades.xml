<?xml version="1.0" encoding="UTF-8"?>
<table>
    <column>
        <name>idoportunidad</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('oportunidades_idoportunidad_seq'::regclass)</default>
    </column>
    <column>
        <name>nombre</name>
        <type>character varying(255)</type>
        <null>NO</null>
    </column>
    <column>
        <name>codcliente</name>
        <type>character varying(6)</type>
    </column>
    <column>
        <name>valor_estimado</name>
        <type>double precision</type>
    </column>
    <column>
        <name>etapa</name>
        <type>character varying(100)</type>
        <default>'Nuevo Lead'</default>
    </column>
    <column>
        <name>probabilidad</name>
        <type>integer</type>
    </column>
    <column>
        <name>fecha_cierre_prevista</name>
        <type>date</type>
    </column>
    <column>
        <name>codagente</name>
        <type>character varying(4)</type>
    </column>
    
    <column>
        <name>resultado</name>
        <type>character varying(50)</type>
        <default>'Abierta'</default>
    </column>
    <column>
        <name>ultima_actividad</name>
        <type>timestamp without time zone</type>
    </column>
    <column>
        <name>objetivos_negocio</name>
        <type>text</type>
    </column>
    <column>
        <name>puntos_dolor</name>
        <type>text</type>
    </column>
    
    <constraint>
        <name>oportunidades_pkey</name>
        <type>PRIMARY KEY (idoportunidad)</type>
    </constraint>
</table>
