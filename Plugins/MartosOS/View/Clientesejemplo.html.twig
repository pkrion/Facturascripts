{% extends 'Master/MenuTemplate.html.twig' %}

{% block css %}
    {{ parent() }}
    <style>
        /* --- ESTILOS GENERALES --- */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        /* --- TARJETAS DE ESTADÍSTICAS SIMPLES --- */
        .summary-card .card-body {
            padding: 1.25rem;
        }
        .summary-card-value {
            font-size: 2.25rem;
            font-weight: 700;
            color: #3a3b45;
        }
        .summary-card-title {
            font-size: 0.9rem;
            color: #858796;
            margin-bottom: 0;
        }

        /* --- BARRA DE FILTROS --- */
        .filter-toolbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        /* --- TARJETA DE CLIENTE --- */
        .client-card {
            border: 1px solid #e3e6f0;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, .08);
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .client-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1.75rem 0 rgba(58, 59, 69, .15);
        }

        /* Cabecera de la tarjeta de cliente */
        .client-card .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            padding: 0.75rem 1.25rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .client-name {
            font-weight: 700;
            font-size: 1.1rem;
            color: #3a3b45;
        }
        .client-industry {
            font-size: 0.8rem;
            color: #858796;
        }
        .badge-status {
            font-size: 0.75em;
            font-weight: 600;
            padding: 0.35em 0.65em;
            border-radius: 0.35rem;
        }
        .badge-activo { background-color: #e0f8f0; color: #1cc88a; }
        .badge-inactivo { background-color: #f8f9fa; color: #858796; border: 1px solid #e3e6f0; }
        .badge-prospecto { background-color: #e6f2ff; color: #4e73df; }

        /* Cuerpo de la tarjeta de cliente */
        .contact-name {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        .contact-details {
            list-style: none;
            padding-left: 0;
            font-size: 0.9rem;
            color: #5a5c69;
            margin-bottom: 1rem;
        }
        .contact-details li {
            margin-bottom: 0.25rem;
        }
        .contact-details i {
            margin-right: 0.5rem;
            color: #b8c2d1;
        }
        .rating .fa-star {
            color: #f6c23e;
        }
        .rating .text-muted {
            color: #e3e6f0 !important;
        }

        /* Pie de la tarjeta de cliente */
        .client-card .card-footer {
            background-color: #f8f9fc;
            border-top: 1px solid #e3e6f0;
            font-size: 0.8rem;
            color: #858796;
        }
        .footer-stat .value {
            display: block;
            font-weight: 700;
            font-size: 1.1em;
            color: #4e73df;
        }
    </style>
{% endblock %}

